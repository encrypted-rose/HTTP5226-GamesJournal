@model  GamesJournal.Models.Player

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this User?</h2>

<a href="/Player/List">Cancel</a>

<div>
    <div>@Model.Username</div>
    <div>@Model.UserCreationDate</div>
</div>

<form action="/Player/Delete/@Model.PlayerId" method="POST">
    <input type="submit" value="Confirm Delete"/>

</form>

