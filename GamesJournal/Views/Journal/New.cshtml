
@{
    ViewBag.Title = "New";
}

<h2>Add New Entry</h2>

<a href="/Journal/List">Return to Journal Entries</a>

<form action="/Journal/Create" method="POST">
    <div>
        <label>Entry Title:</label> <input type="text" name="JournalEntryTitle" />
    </div>

    <div>
        <label>Entry:</label> <input type="text" name="JournalEntry" />
    </div>

    <div>
        <label>EntryDate:</label> <input type="datetime" name="EntryDate" />
    </div>

    <div>
        <label>Game ID:</label> <input type="number" name="GameiId" />
    </div>

    <div>
        <label>Username ID:</label> <input type="number" name="PlayerId" />
    </div>


    <div>
        <input type="submit" value="Add Entry" />
    </div>
</form>

