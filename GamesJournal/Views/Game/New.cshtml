
@{
    ViewBag.Title = "Create";
}

<h2>Add New Game</h2>

<a href="/Game/List">Return to Game Library</a>

<form action="/Game/Create" method="POST">
    <div>
        <label>Game Title:</label> <input type="text" name="GameTitle" />
    </div>

    <div>
        <label>Game Publisher:</label> <input type="text" name="GamePublisher" />
    </div>

    <div>
        <label>Game Rating (1-10):</label> <input type="number" name="GameRating" />
    </div>

    <div>
        <label>Game Description:</label> <input type="text" name="GamePlot" />
    </div>

    <div>
        <input type="submit" value="Add Game" />
    </div>
</form>

